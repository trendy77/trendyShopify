    @include footer-placeholder-text();
    @include opacity-placeholder-text();
  }
}

/*================ Icons ================*/
.site-footer {
  .social-icons .icon,
  .payment-icons .icon {
    fill: currentColor;
  }

  .social-icons .icon {
    margin-right: 10px;
  }

  .payment-icons {
    padding: 5px 0;

